{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "Authentication service with Keycloak integration",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "express": "^4.19.2",
        "axios": "^1.7.7",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "dotenv": "^16.4.5",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "express-validator": "^7.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^22.5.5",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/jest": "^29.5.12",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "supertest": "^6.3.4",
        "@types/supertest": "^6.0.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/index.ts"
        ]
    }
}